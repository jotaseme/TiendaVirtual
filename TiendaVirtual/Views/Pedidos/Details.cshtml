@model TiendaVirtual.Models.PedidoProducts

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tienda Virtual - Productos</title>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/responsive.css">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/owl.carousel.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-push-10 col-md-2">
                    <div class="header-right">
                        <div class="user-menu">
                            <ul>
                                <li><a href="@Url.Action("Index","Pedidos")"><i class="fa fa-user"></i> Pedidos</a></li>       
                                <li>
                                    @if (@Session["usuario"] == null)
                                    {
                                        <a href="@Url.Action("Index","Login")"><i class="fa fa-user"></i>@("Login")</a>

                                    }
                                    else
                                    {
                                        <a href="#"><i class="fa fa-user"></i>@Session["usuario"]</a>
                                    }
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End header area -->

    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="@Url.Action("Index","Productos")"><span>Tienda Virtual </span></a></h1>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="shopping-item">
                        <a href="@Url.Action("Index", "Carrito")"><span class="cart-amunt">@ViewBag.totalPrecio €</span> <i class="fa fa-shopping-cart"></i> <span class="product-count">@ViewBag.carritoSize</span> Ver cesta</a>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End site branding area -->

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Index", "Productos")">Home</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- End mainmenu area -->
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <h3 id="order_review_heading">Resumen de tu pedido #@Html.DisplayFor(model => model.pedido.IdPedido)</h3>

            <div id="order_review" style="position: relative;">
                <table class="shop_table">
                    <thead>
                        <tr>
                            <th class="product-f-image"></th>
                            <th class="product-name">Producto</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.pedido_producto)
                    {
                        <tr class="cart_item">
                            <td class="product-thumbnail">
                                <a href="@Url.Action("Details", "Productos", new { id = item.idProducto }, null)"><img width="145" height="145" alt="" class="shop_thumbnail" src="/Content/Fotos/@item.image"></a>
                            </td>
                            <td class="product-name">
                                <a href="@Url.Action("Details", "Productos",new { id = item.idProducto }, null)">@Html.DisplayFor(modelItem => item.nombre)</a><strong class="product-quantity"> × @Html.DisplayFor(modelItem => item.cantidad)</strong>
                            </td>
                           
                        </tr>
                    }
                    </tbody>
                    <tfoot>

                        <tr class="cart-subtotal">
                            
                            <th>Total pedido</th>
                            <td>
                                <span class="amount"><b>@Html.DisplayFor(model => model.pedido.total) €</b></span>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="footer-about-us">
                        <h2>mi<span>Tienda Virtual</span></h2>
                        <p>Tienda virtual de Jose Maria Moreno para el curso Back-end con Tecnologías Propietarias. Universidad Politecnica de Madrid. 2017</p>
                    </div>
                </div>
                <div class="col-md-push-6 col-md-3 col-sm-push-4 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">Usuario </h2>
                        <ul>
                            <li><a href="@Url.Action("Index","Pedidos")">Historico de pedidos</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>&copy; 2017 - Jose Maria Moreno <a href="">Back-end con Tecnologías Propietarias</a></p>
                    </div>
                </div>


            </div>
        </div>
    </div>

    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/Scripts/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="~/Scripts/main.js"></script>
</body>
</html>
